<%= form_with model: item, local:true do |f| %>
<h2 class="mt-3">商品編集</h2>
<div class="form-graup">
  <label for="item-image">商品画像</label>
  <%= f.attachment_field :image %>
</div>
<div class="form-group">
  <label for="item_name">商品名</label>
  <%= f.text_field :name %>
</div>
<div class="form_group">
  <label class="item_opinion">商品説明</label>
  <%= f.text_area :body %>
</div>
<div class="form_group">
  <label class="item_category">ジャンル</label>
</div>
<div>
  <%= f.select :item_status, Item.item_statuses.keys, class: "item_status" %>
  <%= f.submit "更新" , class: "btn btn-outline-success" %>
</div>
<div class="enter">
  <%= f.submit '変更を保存', class: "btn btn-secondary"  %>
</div>
  <% end %>